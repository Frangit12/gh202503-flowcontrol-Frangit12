name: Controlling the Execution Flow
on:
    workflow_dispatch: 
        inputs: 
            pass-unit-tests:
                decription: funcion de test
                type: boolean
                default: false
                required: true

jobs:   
    lint-built:
        runs-on: ubunt-latest
        steps:
            - name: lint and build
              run: echo "Linting and building project"

    unit-test:
        runs-on: ubunt-latest
        steps:
            - name: Running unit tests
              run: echo "Running tests..."
            - name: Failing tests
              if: ${{ !inputs.pass-unit-tests }}
              run: exit 1